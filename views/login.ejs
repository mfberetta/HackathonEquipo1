<!DOCTYPE html>
<html lang="es">

    <%- include('./head') %>

    <body>
        <div class="container mt-3">
            <div class="jumbotron">
                <%if (message.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                      <%= message %>
                    </div>
                <% } %>
                <h2 style="color:blue;">Login de usuario</h2>
                <br>
                <form id="formLogin" class="form" role="form">
                    <div class="form-group">
                        <label for="email"><i><b>Ingrese su e-mail</b></i></label>
                        <input id="email" class="form-control" type="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password"><i><b>Ingrese su password</b></i></label>
                        <input id="password" class="form-control" type="password" name="password" required>
                    </div>
                    <button class="btn btn-success mt-3 mb-5">Login</button>
                </form>
                <hr>
                <button class="btn btn-success mt-3 mb-5" onclick="window.location.href='/registro'">Ir a Register</button>
            </div>
        </div>
        <script src="js/login.js"></script>
    </body>
</html>
