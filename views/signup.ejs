<!DOCTYPE html>
<html lang="es">

    <%- include('./head') %>

    <body>
        <div class="container mt-3">
            <div class="jumbotron">
                <%if (message.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                      <%= message %>
                    </div>
                <% } %>
                <h2 style="color:blue;">Registro de usuario</h2>
                <br>
                <form id="formSignup" class="form" role="form">
                    <div class="form-group">
                        <label for="username"><i><b>Ingrese su e-mail</b></i></label>
                        <input id="email" class="form-control" type="text" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password"><i><b>Ingrese su password</b></i></label>
                        <input id="password" class="form-control" type="password" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="password1"><i><b>Re ingrese su password</b></i></label>
                        <input id="password1" class="form-control" type="password" name="password1" required>
                    </div>
                    <div class="form-group">
                        <label for="nombre"><i><b>Ingrese su nombre</b></i></label>
                        <input id="nombre" class="form-control" type="text" name="nombre" required>
                    </div>
                    <div class="form-group">
                        <label for="apellido"><i><b>Ingrese su apellido</b></i></label>
                        <input id="apellido" class="form-control" type="text" name="apellido" required>
                    </div>
                    <div class="form-group">
                        <label for="telefono"><i><b>Ingrese su tel√©fono</b></i></label>
                        <input id="telefono" class="form-control" type="text" name="telefono" required>
                    </div>
                    <button class="btn btn-success mt-3 mb-5">Register</button>
                </form>
                <hr>
                <button class="btn btn-success mt-3 mb-5" onclick="window.location.href='/login'">Ir a Login</button>
            </div>
        </div>
        <script src="js/signup.js"></script>
    </body>
</html>
